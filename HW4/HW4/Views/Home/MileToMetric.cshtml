
@{
    ViewBag.Title = "MileToMetric";
}

<div class="container">
    <div class="row">
        <form method="get">
            <div class="col-md-12">
                <h2>Convert Miles to Metric</h2>
            </div>
            <div class="col-md-6">
                <b>Miles</b><br />
                <input name="miles" type="number" min="0" step="0.01" required>
            </div>
            <div class="col-md-6">
                <h4>Select a Unit</h4>
                <hr>

                <input type="radio" name="unit" value="mm"> <b>Milimeters</b><br>
                <input type="radio" name="unit" value="cm"> <b>Centimeters</b><br>
                <input type="radio" name="unit" value="m"> <b>Meters</b><br>
                <input type="radio" name="unit" value="km"> <b>Kilometers</b><br>
                <br>
                <button type="submit">Convert</button>

            </div>
        </form>

        <div class="col-md-12">
            @if (ViewBag.message != null)
            {
                <br>
                <p id="result">
                    <b>@ViewBag.message</b>
                </p>
            }
        </div>
    </div>
</div>

