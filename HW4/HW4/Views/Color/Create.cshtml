@{
    ViewBag.Title = "ColorChooser";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Create a New Color</h2>
            <p>
                Please enter colors in HTML hexadecimal format (#AABBCC)
            </p>
            @using (Html.BeginForm("Create", "Color", FormMethod.Post))
            {
                @Html.Label("firstcolor", "First Color")
                @Html.TextBox("firstcolor", "", htmlAttributes: new { @class = "form-control", pattern = "#[A-F0-9]{2}[A-F0-9]{2}[A-F0-9]{2}"})

                @Html.Label("secondcolor", "Second Color")
                @Html.TextBox("secondcolor", "", htmlAttributes: new { @class = "form-control", pattern = "#[A-F0-9]{2}[A-F0-9]{2}[A-F0-9]{2}" })
                <br />
                <button type="submit">Mix Colors</button>
            }

            @if (ViewBag.blank != true)
            {
                <p>
                    <br />
                    <canvas id="myCanvas" width="100" height="100" style="background-color:@ViewBag.firstcolor"></canvas>
                    +
                    <canvas id="myCanvas" width="100" height="100" style="background-color:@ViewBag.secondcolor"></canvas>
                    =
                    <canvas id="myCanvas" width="100" height="100" style="background-color:@ViewBag.newcolor"></canvas>
                </p>
            }
            @if (ViewBag.incorrect == true)
            {
                <p>
                    Be sure that you entered a valid hex color code. All caps, starting with a #, and three tuples of A-F or 0-9.
                </p>
            }
        </div>
    </div>
</div>